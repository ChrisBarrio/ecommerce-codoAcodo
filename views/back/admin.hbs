<!DOCTYPE html>
<html lang="en">

<head>
    {{> head}}
    <title>Panel de control</title>
</head>

<body id="backend">
    <h1 class="text-center my-4">Panel de control</h1>
    
    <div class="container mb-4">

        {{> header}}

        <div class="table-responsive mt-4">
            {{#if mensaje}}
                <div class="alert alert-success" role="alert">
                    {{mensaje}}
                </div>
            {{/if}}
            <table class="table caption-top">
                <caption class="mb-3 text-dark">Lista de productos:</caption>
                <thead class="table-light">
                    <tr>
                        <th scope="col">#ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" style="max-width: 30%">Descripcion</th>
                        <th scope="col" style="max-width: 10%">Caracter√≠sticas</th>
                        <th scope="col" style="max-width: 5%">Precio ($)</th>
                        <th scope="col" style="max-width: 2%">Stock</th>
                        <th scope="col" style="max-width: 5%">Acciones</th>
                    </tr>
                </thead>

                <tbody id="admin-productos">
                    {{#if productos}}
                    {{#each productos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{nombre}}</td>
                        <td><img src="{{rutaImagen}}" alt="{{nombre}}" style="width:200px; height:60px;object-fit: contain;">
                        </td>
                        <td class="descripcion">
                            <div>{{descripcion}}</div>
                        </td>
                        <td class="caracteristicas">
                            {{caracteristicas}}
                            {{!-- <ul>
                                <li> i7 </li>
                                <li> 11gen </li>
                                <li> 256gb SSD </li>
                                <li> 16 gb RAM </li>
                            </ul> --}}
                        </td>
                        <td>{{dolarApeso precio}}</td>
                        <td>{{stock}}</td>
                        <td>
                            <a href="/editar-producto/{{id}}">Editar</a><br>
                            <a href="/borrar-producto/{{id}}">Borrar</a>
                        </td>
                    </tr>
                    {{/each}}
                    {{else}}
                    <tr>
                        <td colspan="8"><p>No hay productos cargados, por favor cargar alguno</p></td>
                    </tr>
                    {{/if}}
                </tbody>

            </table>
            <a href="/agregar-producto" class="btn btn-info">Agregar producto</a>

        </div>

    </div><!-- /container -->

    {{> footer}}

</body>

</html>